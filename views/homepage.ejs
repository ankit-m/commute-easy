<div class="container mt-4">
  <h1>Find Routes</h1>
  <form autocomplete="off" method="GET" action="/routes" class="mt-4">
    <div class="form-group">
      <label for="source">Source</label>
      <input
        required
        class="form-control"
        name="source"
        id="source"
        aria-describedby="Source location name"
        placeholder="India Gate"
      >
    </div>
    <div class="form-group">
      <label for="destination">Destination</label>
      <input
        required
        name="destination"
        class="form-control"
        id="destination"
        aria-describedby="Destination location name"
        placeholder="AIIMS"
      >
    </div>

    <div class="form-group">
      <label for="mode">Preferred modes of transportation</label>
      <br>
      <div class="form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          value="bus"
          id="bus"
          name="mode"
        >
        <label class="form-check-label" for="bus">
          Bus
        </label>
      </div>
      <div class="form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          value="train"
          id="train"
          name="mode"
        >
        <label class="form-check-label" for="defaultCheck2">
          Train
        </label>
      </div>
      <div class="form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          value="metro"
          id="metro"
          name="mode"
        >
        <label class="form-check-label" for="defaultCheck2">
          Metro
        </label>
      </div>
      <div class="form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          value="taxi"
          id="taxi"
          name="mode"
        >
        <label class="form-check-label" for="defaultCheck2">
          Taxi/Auto
        </label>
      </div>
    </div>

    <div class="mt-4">
      <button type="reset" class="btn btn-light mr-2">Clear</button>
      <button type="submit" class="btn btn-primary">Get Routes</button>
    </div>
  </form>
</div>